<% if post.favorited_by?(current_user) %>
  <%= link_to post_favorites_path(post), method: :delete, class: "like-btn favorited" do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <span class="favorite-count"><%= post.favorites.count %></span>
  <% end %>
<% else %>
  <%= link_to post_favorites_path(post), method: :post, class: "like-btn not-favorited" do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <span class="favorite-count"><%= post.favorites.count %></span>
  <% end %>
<% end %>
