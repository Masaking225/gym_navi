<h2 class="text-center my-4">会員登録</h2>

<%= form_with model: @user, url: user_registration_path do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group mb-3 text-center">
    <%= f.label :名前 %><br>
    <%= f.text_field :name, class: "form-control d-inline-block w-25" %>
  </div>

  <div class="form-group mb-3 text-center">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, class: "form-control d-inline-block w-25", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group mb-3 text-center">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, class: "form-control d-inline-block w-25", autocomplete: "new-password" %>
  </div>

  <div class="form-group mb-3 text-center">
    <%= f.label :再パスワード %><br />
    <%= f.password_field :password_confirmation, class: "form-control d-inline-block w-25", autocomplete: "new-password" %>
  </div>

  <div class="text-center">
    <%= f.submit "会員登録", class: "btn btn-success" %>
  </div>
<% end %>

<div class="text-center mt-3">
  <%= render "devise/shared/links" %>
</div>

