<div class="container mt-4">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h2 class="mb-4">投稿詳細</h2>
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th>ユーザー</th>
            <th>投稿タイトル</th>
            <th>内容</th>
            <th>店舗名</th>
            <th>店舗住所</th>
            <% if @post.user == current_user %>
              <th>操作</th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user) do %>
                <%= image_tag @user.get_profile_image(100, 100), class: "img-thumbnail" %>
                <div><%= @user.name %></div>
              <% end %>
            </td>
            <td>
              <%= link_to post_path(@post) do %>
                <%= @post.title %>
              <% end %>
            </td>
            <td><%= @post.body %></td>
            <td><%= @post.shop_name %></td>
            <td><%= @post.shop_address %></td>
            <% if @post.user == current_user %>
              <td class="d-flex">
                <%= link_to edit_post_path(@post), class: 'btn btn-primary mr-2' do %>
                  <button type="button" class="btn btn-primary">編集</button>
                <% end %>  
                <%= link_to post_path(@post), method: :delete, data: { confirm: '本当に削除しますか?' }, class: 'btn btn-danger' do %>
                  <button type="button" class="btn btn-danger">削除</button>
                <% end %>  
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
