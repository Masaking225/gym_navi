<div class='col-md-3'>
		<% if post.errors.any? %>
			<%= post.errors.count %>errors prohibited this user from being saved:
			<ul>
				<% post.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		<% end %>
	    <h2>ユーザー情報</h2>
	    <table class='table'>
	      <tr>
	        <%= image_tag user.get_profile_image(100,100) %>
	      </tr>
	      <tr>
	        <th>ユーザー名</th>
	        <th><%= user.name %></th>
	      </tr>
	    </table>
	    <div class='row'>
			  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
				ユーザー編集 
				  <i class="fas fa-user-cog"></i>
				<% end %>
	    </div>
	    <h2 class="mt-3">新規投稿</h2>
	    <%= form_with model: post do |f| %>
        <h4>タイトル</h4>
        <%= f.text_field :title %>
        <h4>内容</h4>
        <%= f.text_area :body %>
        <h4>ジムの名前</h4>
        <%= f.text_area :shop_name %>
        <h4>ジムの住所</h4>
        <%= f.text_area :shop_address %>
        <%= f.submit '投稿する' %>
      <% end %>
</div>